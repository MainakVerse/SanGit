# Set the registry for scoped packages
@your-scope:registry=https://registry.npmjs.org/

# Authentication token for accessing private packages
//registry.npmjs.org/:_authToken=YOUR_AUTH_TOKEN

# Specify the package lock file behavior
package-lock=true

# Set the cache directory
cache=${HOME}/.npm/.cache

# Use legacy peer dependencies (optional)
legacy-peer-deps=true
